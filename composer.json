{
    "name": "stefanotorresi/thorr-persistence",
    "description": "A collection of helper classes for Repository pattern implementation based on Doctrine ORM",
    "type" : "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Stefano Torresi",
            "email": "stefano@torresi.pro"
        }
    ],
    "require-dev": {
        "zendframework/zend-eventmanager": "~2.0",
        "zendframework/zend-servicemanager": "~2.0",
        "zendframework/zend-modulemanager": "~2.0"
    },
    "suggest": {
        "zendframework/zend-eventmanager": "required to use the EventManagerAware decorator",
        "zendframework/zend-servicemanager": "required to use DataMapperManager",
        "zendframework/zend-modulemanager": "required to load the library as a ZF2 module"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.x-dev"
        }
    },
    "autoload" : {
        "classmap": [
            "Module.php"
        ],
        "psr-4": {
            "Thorr\\Persistence\\": "src/",
            "Thorr\\Persistence\\Test\\": "tests/"
        }
    }
}
